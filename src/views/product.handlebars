<div class="product-container">
    <p id="cartIdInput" value="{{cart}}">
    <h2>{{product.title}}</h2>
    <p><strong>Código:</strong> {{product.code}}</p>
    <p><strong>Descripción:</strong> {{product.description}}</p>
    <p><strong>Precio:</strong> ${{product.price}}</p>
    <p><strong>Stock:</strong> {{product.stock}}</p>
    <p><strong>Categoría:</strong> {{product.category}}</p>
    <p class="{{#if product.status}}status-available{{else}}status-not-available{{/if}}">
        <strong>Estado:</strong> {{#if product.status}}Disponible{{else}}Agotado{{/if}}
    </p>

    {{#if product.thumbnails}}
    <h3>Imágenes del producto:</h3>
    <div class="product-images">
        {{#each product.thumbnails}}
        <img src="{{this}}" alt="Imagen del producto">
        {{/each}}
    </div>
    {{/if}}

    <form id="add-to-cart-form">
        <input type="hidden" name="productId" value="{{product._id}}">
        <label for="quantity">Cantidad:</label>
        <input type="number" name="quantity" value="1" min="1" id="quantity" required>
        <button type="submit">Agregar al carrito</button>
    </form>

    <a href="/products" class="back-link">Home</a>
</div>
<link rel="stylesheet" href="/css/stylesProduct.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>